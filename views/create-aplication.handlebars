<div class="div_body_content">
    <hr>
    <h5><i class="fas fa-angle-right"></i>&nbsp;Cadastro de Aplicação</h5>

    <div class="container-fluid bg-light p-3">

        <form class="needs-validation" action="/register-aplication" method="POST" enctype="multipart/form-data" novalidate>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                <label for="validationTooltip01">Nome da aplicação</label>
                <input type="text" class="form-control" name="nameapp" id="validationTooltip01" value="" required>
                <div class="valid-tooltip">
                    Muito bem!
                </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="validationTooltip02">URL</label>
                    <input type="text" class="form-control" name="urlapp" id="validationTooltip02" value="" required>
                    <div class="valid-tooltip">
                        Muito bem!
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label for="validationTooltip03">Descrição</label>
                    <textarea type="text" class="form-control" name="descricaoapp" id="validationTooltip03" required></textarea>
                    <div class="valid-tooltip">
                        Muito bem!
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationTooltip04">Linguaguem</label>
                    <select class="custom-select" name="linguagemapp" id="validationTooltip04" required>
                        <option selected="" disabled="" value="">Escolha</option>
                        {{#linguagem}}
                        <option>{{name}}</option>
                        {{/linguagem}}
                    </select>
                    <div class="invalid-tooltip">
                        Please select a valid state.
                    </div>
                </div>
                <div class="col-md-3 mb-3" style="max-width: 30rem;">
                    <label for="validationTooltip05">Logo</label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name="imgapp" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01"></label>
                    </div>
                </div>
            </div>
            <button class="btn btn-info" type="submit">Cadastrar</button>
            <button class="btn btn-info" type="button" onClick="window.location='/';" >Cancelar</button>
        </form>

    </div>

    
</div>