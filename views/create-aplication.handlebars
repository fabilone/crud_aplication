<div class="div_body_content">
    
    <hr>
    <h5><i class="fas fa-angle-right"></i>&nbsp;Cadastro de Aplicação</h5>

    <div class="container-fluid bg-light p-3">

        <form class="needs-validation" action="/register-aplication" method="POST" enctype="multipart/form-data">
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label for="validationDefault01">Nome da aplicação</label>
                    <input type="text" class="form-control" name="nameapp" id="validationDefault01" value="" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="validationDefault02">URL</label>
                    <input type="text" class="form-control" name="urlapp" id="validationDefault02" value="" required>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label for="validationDefault03">Descrição</label>
                    <textarea type="text" class="form-control" name="descricaoapp" id="validationDefault03" value="" required></textarea>
                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationDefault04">Linguaguem</label>
                    <select class="custom-select" name="linguagemapp" id="validationDefault04" required>
                        <option selected="" disabled="" value="">Escolha</option>
                        {{#linguagem}}
                        <option>{{name}}</option>
                        {{/linguagem}}
                    </select>
                </div>
                <div class="col-md-3 mb-3" style="max-width: 30rem;">
                    <label for="validationDefault05">Logo</label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name="imgapp" id="validationDefault05" aria-describedby="inputGroupFileAddon01" required>
                        <label class="custom-file-label" for="validationDefault05">Escolha a imagem</label>
                    </div>
                </div>
            </div>
            <button class="btn btn-info" type="submit">Cadastrar</button>
            <button class="btn btn-info" type="button" onClick="window.location='/';" >Cancelar</button>
        </form>
    </div>

</div>