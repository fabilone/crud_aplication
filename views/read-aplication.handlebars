<div class="div_body_content">
    <hr>
    <h5><i class="fas fa-angle-right"></i>&nbsp;Aplicações Cadastradas no Sistema</h5>

    <table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">URL</th>
      <th scope="col">Linguagem</th>
      <th scope="col">Ação</th>
    </tr>
  </thead>
  <tbody>
    {{#aplications}}
    <tr>
      <th scope="row">{{codigo}}</th>
      <td>{{name}}</td>
      <td>
        <a class="none-link" href="{{URL}}" target="_blank">{{URL}}</a>
      </td>
      <td>{{app_language}}</td>
      <td>
        <nav aria-label="...">
          <ul class="pagination pagination-sm">
            <li class="page-item">
              <form name="info-form{{codigo}}" action="/info" method="POST">
                <input type="hidden" name="codigo" value="{{codigo}}">
                <a class="page-link" href="#" onClick="document.forms['info-form{{codigo}}'].submit();" tabindex="-1"><i class="fas fa-info"></i>&nbsp;Detalhar</a>
              </form>
            </li>
            <li class="page-item"><a class="page-link" href="#"><i class="fas fa-edit"></i>&nbsp;Editar</a></li>
            <li class="page-item"><a class="page-link" href="#"><i class="fas fa-trash-alt"></i>&nbsp;Excluir</a></li>
          </ul>
        </nav>
      </td>
    </tr>
    {{/aplications}}
  </tbody>
</table>



    
</div>